<script>
    let map;
    function initMap() {
        var myLatLng = {
            lat: 9.934739,
            lng: -84.087502
        };
        var map = new google.maps.Map(document.getElementById("map"), {
            zoom: 8,
            center: myLatLng,
            zoomControl: true,
            scrollwheel: true,
            draggable: true,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        });
        new google.maps.Marker({
            position: myLatLng,
            map,
            title: "Hello World!"
        });
    }

